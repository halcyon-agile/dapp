{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "harp",
    "version": "0.1.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.halcyonagilepms.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/halcyon-agile/dapp/releases/download/app-v{{current_version}}/latest.json",
        "https://github.com/halcyon-agile/dapp/releases/download/app-{{current_version}}/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEzRTc4MDRDNjM1MTU3MApSV1J3RlRYR0JIZytDdUJEMXROU1I3MFZ3aXdGZGxUcUZzRTlqUUMwUC9hVkUvbE9JWlNFdVpZUgo="
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "HARP v0.1.3",
        "width": 800,
        "height": 600
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    }
  }
}
